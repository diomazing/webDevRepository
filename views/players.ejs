    <!-- End of Player Modal -->

    <!-- CREATE PLAYER CARD -->
    <div class="row"> 
      <div class="col-md-4">
        <div class="card">
          <div class="content">
            <a href="/player/create" class="w3-button">CREATE PLAYER</a><br><br>
            <p>Found talent? Potential Superstars? Click the button to create a player.</p>
           
          </div>
          <div class="image-jersey">
            <img src="/assets/images/jersey.png">
            <div class="image-jersey">
              <h3>CREATE PLAYER</h3>
              <h1>00</h1>
            </div>
          </div>
          
        </div>
      </div>
      <!-- PLAYER CARD -->
      <% for(i=0;i < player.length ; i++) {%>
        <!-- MODAL SCRIPT for the player card -->
        <script>
        var modal = document.getElementById('<%= player[i].id%>');
  
        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function(event) {
        if (event.target == modal) {
             modal.style.display = "none";
           }
        }
        </script>
        <!-- PLAYER CARD DETAILS -->
        <div class="col-md-4">
          <div class="card">
            <div class="content">
              <a onclick="document.getElementById('<%= player[i].id%>').style.display='block'"
                class="w3-button">View Profile</a>
              <h2><%= player[i].firstname +" "+ player[i].lastname %></h2>
              <p><%= "A " +player[i].age+ " year-old "+ player[i].position + " from " + player[i].address %></p>
            </div>
            <div class="image-jersey">
              <img src="/assets/images/jersey.png">
              <div class="image-jersey">
                <h3><%=player[i].lastname%></h3>
                <h1><%=player[i].rating%></h1>
              </div>
            </div>
            
          </div>
        </div>
        <% } %>
        <!-- END OF PLAYER CARD -->
    </div>   

