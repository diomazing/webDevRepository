    <!-- PLayer Modal -->
    <% for(i=0;i < player.length ; i++) {%>
    <div id="<%= player[i].id%>" class="w3-modal">
      <div class="w3-modal-content w3-card-4 w3-animate-opacity">
        <div class="w3-container">
          <span onclick="document.getElementById('<%= player[i].id%>').style.display='none'"class="w3-button w3-display-topright" style="font-size: 52px;">&times;</span><br><br>
          <nav class="navbar navbar-inverse visible-xs">
            <div class="container-fluid">
              <div class="navbar-header">
                <img src="<%=player[i].photo%>" style="height:150px; width:150px; border-radius:50%;">
              </div>
            </div>
          </nav>

          <div class="container-fluid">
            <div class="row content">
              <div class="col-sm-3 sidenav hidden-xs">
                <h2><%= player[i].firstname+" "+player[i].lastname%></h2>
                <% if(player[i].uuid == uuid){ %>
                <a href="/player/player_edit?id=<%= player[i].id%>"><button type="button" class="btn btn-primary">Edit Player</button></a><br><br>
                <a href="/player/player_delete?id=<%= player[i].id%>"><button type="button" class="btn btn-danger">Delete Player</button></a>
                <% }%>
              </div>
              <br>
              
              <div class="col-sm-9">
                <h2>More Information</h2>
                <br><br>
              
                <br><br>
                <div class="dip">
                  <p>Physical Stats</p>
                </div>
                <div class="row">
                  <div class="col-sm-3">
                    <div class="well">
                      <h4>Height</h4>
                      <p><%= player[i].height+" ft"%></p> 
                    </div>
                  </div>
                  <div class="col-sm-3">
                    <div class="well">
                      <h4>Weight</h4>
                      <p><%= player[i].weight+" lbs"%></p> 
                    </div>
                  </div>
                  <div class="col-sm-3">
                    <div class="well">
                      <h4>Position</h4>
                      <p><%= player[i].position%></p> 
                    </div>
                  </div>
                  <div class="col-sm-3">
                    <div class="well">
                      <h4>Overall Rating</h4>
                      <p><%= player[i].rating+" pts."%></p> 
                    </div>
                  </div>
                  <div class="col-sm-3"></div> <!--tabulation-->
                  <div class="col-sm-3"></div> <!--tabulation-->
                </div>
                <br><br>
                <div class="dip" >
                  <p>Personal Information</p>
                </div>
                <div class="row">
                  <div class="col-sm-3">
                    <div class="well">
                      <h4>Age</h4>
                      <p><%= player[i].age+" yrs. old"%></p> 
                    </div>
                  </div>
                  <div class="col-sm-3">
                    <div class="well">
                      <h4>From</h4>
                      <p><%= player[i].address%></p> 
                    </div>
                  </div>
                </div>
                
                <br><br>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
